Current balance: <%= @user.saving.cash %>
<form action="/withdraw" method="post">
<label>Money:</label>
<input type="number" name="amount"/><br />
<button type="submit">Withdraw</button><br />
</form>

<% if @error.to_i == 1 %>
<h2 style="color: red;">You don't have enough money!</h2>
<% elsif @error.to_i == 2 %>
<h2>Wrong input!</h2>
<% end %>

<ul>
<% @user.timetables.each do |timetable| %>
<li>Transaction date: <%= timetable.date %><%= timetable.ammount %></li>
<% end %>
</ul>	